model Publication {
  id        String   @id @default(cuid())
  title     String
  published DateTime?
  doi       String?
  url       String?
  // Many members (authors) per publication, many publications per member (M:N)
  members   Member[]
  // Publications can be associated with multiple projects (M:N)
  projects  Project[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
