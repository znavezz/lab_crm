model User {
  id             String   @id @default(cuid())
  name           String
  email          String   @unique
  emailVerified  DateTime?
  image          String?

  // One-to-one link: each User corresponds to one Member profile
  memberId   String   @unique
  member     Member   @relation(name: "MemberUser", fields: [memberId], references: [id], onDelete: Cascade)

  // A user can have multiple external login accounts and sessions
  accounts  Account[]
  sessions  Session[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
