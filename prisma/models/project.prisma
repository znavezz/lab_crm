model Project {
  id          String   @id @default(cuid())
  title       String
  description String?
  startDate   DateTime?
  endDate     DateTime?

  // --- ALLOCATION (Items "owned" by this project) ---
  equipments Equipment[]

  // --- SCHEDULING (Reservations for this project) ---
  bookings Booking[]

  // Many members can be on many projects (M:N with Member)
  members   Member[]       @relation("ProjectMembers")
  // Projects can be funded by multiple grants (M:N with Grant)
  grants    Grant[]
  // Publications resulting from this project (M:N with Publication)
  publications Publication[]
  // External collaborators involved in this project (M:N with Collaborator)
  collaborators Collaborator[]
  // Documents related to the project (e.g. proposals, reports)
  documents  Document[]
  // Events related to the project (e.g. workshops, conferences)
  events Event[]
  // Expenses related to the project (e.g. travel, equipment)
  expenses    Expense[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // If a project is deleted, we detach it from related records (join tables handle M:N cleanup)
  // (Cascade or SetNull on one-to-many relations are defined on the owning side models)
}
